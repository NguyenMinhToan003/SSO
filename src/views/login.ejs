<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Font Icon CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    ]
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>
  <style>
    .none {
      display: none;
    }
    .active {
      display: block;
    }
  </style>
  <script>
    $(document).ready(function () {
      $("#btnSubmit").on("click", function () {
        const username = $("#username").val();
        const password = $("#password").val();
        $.ajax({
          url: `${window.location.origin}/login`,
          type: "POST",
          data: { username, password },
          cache: false,
          withCredentials: true,
          success: function (data) {
            console.log(data);
            window.location.href = "/";
          },
          error: function (req, status, error) {
            $("#flashMess").empty();
            $("#flashMess").append(req.responseText);
            $("#flashMess").addClass("active");
          },
        });
      });
    });
  </script>
  <body>
    <div class="needs-validations mt-5">
      <div class="mt-3 col-4 mx-auto shadow p-3 mb-5 bg-body rounded">
        <h1 class="text-center">Sign in</h1>
        <section>
          <div
            class="alert alert-danger none"
            id="flashMess"
            role="alert"></div>
          <label class="form-label">Username</label>
          <input
            class="form-control"
            name="username"
            type="text"
            id="username"
            required
            autofocus />
          <div class="invalid-feedback">Please choose a username.</div>
        </section>
        <section>
          <label class="form-label">Password</label>
          <input
            class="form-control"
            id="password"
            name="password"
            type="password" />
          <div class="invalid-feedback">Please choose a password.</div>
        </section>
        <div class="text-center">
          <button type="button" id="btnSubmit" class="btn btn-primary mt-3">
            Login
          </button>
          <hr />
          <span class="d-block mb-3">or login with </span>
          <div class="d-flex col justify-content-center align-center gap-4">
            <i class="bi bi-google cursor-pointer"></i>
            <i class="bi bi-facebook cursor-pointer"></i>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
