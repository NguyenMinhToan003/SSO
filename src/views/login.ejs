<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Font Icon CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
  </head>

  <body>
    <form action="/login" method="post" class="needs-validations mt-5">
      <div class="mt-3 col-4 mx-auto shadow p-3 mb-5 bg-body rounded">
        <h1 class="text-center">Sign in</h1>
        <section>
          <% if(error!=""){ %>
          <div class="alert alert-danger" role="alert"><%=error %></div>
          <% } %>

          <label class="form-label">Username</label>
          <input
            class="form-control"
            name="username"
            type="text"
            value="<%=userName%>"
            required
            autofocus />
          <div class="invalid-feedback">Please choose a username.</div>
        </section>
        <section>
          <label class="form-label">Password</label>
          <input
            class="form-control"
            id="current-password"
            name="password"
            type="password" />
          <div class="invalid-feedback">Please choose a password.</div>
        </section>
        <div class="text-center">
          <button type="submit" class="btn btn-primary mt-3">Login</button>
          <hr />
          <span class="d-block mb-3">or login with </span>
          <div class="d-flex col justify-content-center align-center gap-4">
            <i class="bi bi-google cursor-pointer"></i>
            <i class="bi bi-facebook cursor-pointer"></i>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
